# Backend Environment Variables (HTTP Mode)
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./demo-data.db

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration (Replace with your actual frontend URLs)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# WebSocket Configuration (Replace with your actual frontend URLs)
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Timezone Configuration
TZ=Asia/Bangkok

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Production Settings (Set these in production)
# PRODUCTION_DOMAIN=your-production-domain.com
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
